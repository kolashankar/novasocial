# Production Environment Variables for NovaSocial Backend

# Database
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/novasocial?retryWrites=true&w=majority
DB_NAME=novasocial

# Security
SECRET_KEY=your-super-secret-production-key-here
JWT_SECRET=your-jwt-secret-key-here

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=novasocial-media-production
AWS_REGION=us-east-1

# Server Configuration
PORT=8001
HOST=0.0.0.0
WORKERS=4

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourapp.com,https://www.yourapp.com

# API Configuration
API_VERSION=v1
MAX_UPLOAD_SIZE=50MB

# Socket.IO Configuration
SOCKETIO_CORS_ORIGINS=["https://yourapp.com"]

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@novasocial.com
EMAIL_PASSWORD=your-email-password

# Push Notifications
FCM_SERVER_KEY=your-firebase-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/novasocial.log

# Feature Flags
ENABLE_CLOUD_STORAGE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true